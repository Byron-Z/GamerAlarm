<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape android:shape="oval">
            <solid
                android:color="@color/button_color" />
            <stroke
                android:width="0dp"
                android:color="#02ff11" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#e5e5e5"
                android:endColor="#b0b3b4"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#4aa5d4" />

        </shape>
    </item>
</selector>